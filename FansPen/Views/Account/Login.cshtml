@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

<div class="row" id="LoginMain">
    <div class="col-md-4 col-sm-2">
        <div class="row">
            <img class="LogImage" src="~/images/4.png" />
            <img class="LogImage" src="~/images/1.png" />
        </div>
        <div class="col-md-offset-2">
            <img class="LogImage" src="~/images/5.png" />
        </div>
    </div>

    <div class="col-xs-offset-0 col-xs-12 col-md-offset-0 col-md-4 col-sm-offset-2 col-sm-5">
        <div class="row">
            <div class="col-md-offset-3 col-md-8 col-xs-offset-1 col-xs-10">
                <h4 id="SignInLabel">
                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"> </span>
                    Sign in to FansPen
                </h4>
            </div>
        </div>
        <br>
        <section class="panel panel-default">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="panel-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 checkbox" id="LoginRememberMe">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                        <div class="col-md-6">
                            <a asp-action="ForgotPassword">Forgot password?</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">Log in</button>
                    </div>
                </div>
            </form>

            <div class="row">
                <div class="col-md-offset-3 col-md-7 col-sm-offset-2 col-xs-offset-1 col-xs-10">
                    <section>
                        @{
                            var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                            <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                                <div>
                                    <p>
                                        @foreach (var provider in loginProviders)
                                        {
                                            <input id="LoginProviders" type="image" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account" src="~/images/@provider.DisplayName .png">
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    </section>
                </div>
            </div>
        </section>
    </div>
    <div class="col-md-4 col-sm-2">
        <div class="row">
            <img class="LogImage" src="~/images/3.png" />
            <img class="LogImage" src="~/images/2.png" />
        </div>
        <div class="col-md-offset-2">
            <img class="LogImage" src="~/images/6.png" />
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
